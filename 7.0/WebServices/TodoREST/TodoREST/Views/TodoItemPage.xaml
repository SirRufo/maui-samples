<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:TodoREST.ViewModels"
             x:DataType="{x:Type vm:TodoItemPageViewModel}"
			 x:Class="TodoREST.Views.TodoItemPage" 
			 Title="Todo">
    <ContentPage.Resources>
        <Style TargetType="Label">
            <Setter Property="Margin"
                    Value="0,10,0,10" />
            <Setter Property="FontAttributes"
                    Value="Bold" />
            <Setter Property="FontSize"
                    Value="20" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin"
                    Value="0,5,0,5" />
        </Style>
    </ContentPage.Resources>
	<VerticalStackLayout Margin="20">
		<Label Text="Name" />
		<Entry Text="{Binding Path=TodoItem.Name}" 
               Placeholder="Enter item" />
		<Label Text="Notes" />
		<Entry Text="{Binding Path=TodoItem.Notes}"
               Placeholder="Enter notes" />
		<Label Text="Done" />
		<Switch IsToggled="{Binding Path=TodoItem.Done}" />
		<Button Text="Save"
                Command="{Binding SaveCommand}" />
		<Button Text="Delete"
                Command="{Binding DeleteCommand}" />
		<Button Text="Cancel" 
                Command="{Binding CancelCommand}" />
	</VerticalStackLayout>
</ContentPage>
